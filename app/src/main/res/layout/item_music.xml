<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageAlbum"
        android:layout_width="56dp" android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music" />

    <LinearLayout
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/textTitle"
            android:text="Judul Lagu" android:textStyle="bold"
            android:textSize="16sp" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily = "@font/poppins"/>

        <TextView
            android:id="@+id/textArtist"
            android:text="Artis" android:textSize="14sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:fontFamily = "@font/poppins"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_play" android:contentDescription="Play"
        android:tint="@color/black"/>
</LinearLayout>
